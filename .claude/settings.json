{
  "permissions": {
    "allow": [
      "Write",
      "Edit",
      "WebFetch",
      "WebSearch",

      "Bash(pnpm i)",
      "Bash(pnpm gen-ppk)",
      "Bash(pnpm build)",
      "Bash(pnpm run deploy)",
      "Bash(pnpm add:*)",
      "Bash(pnpm test)",
      "Bash(pnpm test:unit)",
      "Bash(pnpm test:integration)",
      "Bash(pnpm test:e2e)",
      "Bash(pnpm exec tsc --noEmit)",
      "Bash(pnpm lint)",

      "Bash(git status)",
      "Bash(git branch:*)",
      "Bash(git log:*)",
      "Bash(git diff:*)",
      "Bash(git commit:*)",
      "Bash(git switch:*)",
      "Bash(git restore:*)",
      "Bash(git add:*)",
      "Bash(git stash push:*)",
      "Bash(git stash pop)",
      "Bash(git push:*)",
      "Bash(git pull:*)",
      "Bash(git worktree:*)",

      "Bash(gh issue view:*)",
      "Bash(gh issue list:*)",
      "Bash(gh issue create:*)",
      "Bash(gh issue close:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr create:*)",
      "Bash(gh secret set:*)",
      "Bash(gh variable set:*)",

      "Bash(ls:*)",
      "Bash(pwd)",
      "Bash(mkdir:*)",
      "Bash(mv:*)",
      "Bash(cat:*)",

      "mcp__playwright__*"
    ],
    "deny": ["Bash(curl *)", "Bash(wget *)", "Read(./secrets/**/*)"],
    "ask": ["Read(./.env)", "Bash(rm *)", "Bash(rm -rf *)"]
  },
  "enableAllProjectMcpServers": true,
  "enabledPlugins": {
    "code-simplifier@claude-plugins-official": true
  }
}

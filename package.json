{
  "name": "ai-cybozu-plugin-template",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "vitest",
    "test:e2e": "playwright test",
    "build": "vite build",
    "dev": "vite build --watch",
    "package": "cli-kintone plugin pack --input ./plugin/manifest.json --output ./dist/plugin.zip --private-key ./key/private.ppk",
    "upload": "source ./.env && cli-kintone plugin upload --input ./dist/plugin.zip --base-url $BASE_URL --username $USERNAME --password $PASSWORD",
    "deploy": "pnpm build && pnpm package && pnpm upload",
    "gen-ppk": "cli-kintone plugin keygen --output ./key/private.ppk",
    "lint": "biome check",
    "create-kintone-app": "tsx --env-file .env ./scripts/create-kintone-app.ts",
    "prepare": "husky"
  },
  "license": "ISC",
  "packageManager": "pnpm@10.18.3",
  "dependencies": {
    "dotenv": "^17.2.3",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "devDependencies": {
    "@kintone/cli": "^1.16.1",
    "@kintone/dts-gen": "^9.0.0",
    "@playwright/test": "^1.40.0",
    "@types/node": "^25.0.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "biome": "^0.3.3",
    "husky": "^9.1.7",
    "playwright": "^1.40.0",
    "playwright-chromium": "^1.40.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "^7.2.7",
    "vitest": "^4.0.15"
  }
}
